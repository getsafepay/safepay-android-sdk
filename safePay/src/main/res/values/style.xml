<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.PhoneNumberKit.BottomSheetDialog"
        parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/Widget.PhoneNumberKit.BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Widget.PhoneNumberKit.BottomSheet"
        parent="Widget.MaterialComponents.BottomSheet">

        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.PhoneNumberKit</item>
    </style>

    <style name="ShapeAppearanceOverlay">
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorSecondary">@color/grey</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="CheckBoxCustomTheme" parent="Base.Theme.AppCompat">
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="buttonTint">@color/checkbox_selector</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>



</resources>